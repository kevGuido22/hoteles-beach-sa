@model HotelesBeachSA.Models.Reservacion

@{
    ViewData["Title"] = "UserReservationView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Reservacion</h1>

<h4>Reservacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserReservationView">
            <div asp-validation-summary="ModelOnly" class="text-danger g-5"></div>

            <div class="row g-4 mb-5">
                <!-- Primera columna -->
                <div class="col-md-6 g-4">
                    @*<div class="form-group">
                    <label asp-for="UsuarioId" class="control-label"></label>
                    <input asp-for="UsuarioId" class="form-control border-1 border-secondary" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>*@
                    @*<div class="form-group">
                    <label asp-for="PaqueteId" class="control-label"></label>
                    <input asp-for="PaqueteId" class="form-control border-1 border-secondary" />
                    <span asp-validation-for="PaqueteId" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        @*<label asp-for="PaqueteId" class="control-label"></label>*@
                        @*<input asp-for="PaqueteId" class="form-control border-1 border-secondary" readonly/>*@
                        @*<span asp-validation-for="PaqueteId" class="text-danger"></span>*@
                        <label asp-for="PaqueteId" class="control-label">Paquete</label>
                        <select asp-for="PaqueteId" class="form-control border-1 border-secondary">
                            @{
                                var paquetes = TempData["paquetes"] as List<Paquete>;
                                var paqueteId = TempData["paqueteId"] != null ? (int)TempData["paqueteId"] : 0;
                                if (paquetes != null)
                                {
                                    foreach (var item in paquetes)
                                    {
                                        if (item.Id == paqueteId)
                                        {
                                           <option value="@item.Id" selected>@item.Nombre</option>
                                        }
                                        else
                                        {
                                           <option value="@item.Id">@item.Nombre</option>
                                        }
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CantidadPersonas" class="control-label"></label>
                        <input asp-for="CantidadPersonas" class="form-control border-1 border-secondary" />
                        <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda columna -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FechaInicio" class="control-label"></label>
                        <input asp-for="FechaInicio" class="form-control border-1 border-secondary" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaFin" class="control-label"></label>
                        <input asp-for="FechaFin" class="form-control border-1 border-secondary" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
