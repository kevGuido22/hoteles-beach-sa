@model ConfirmacionViewModel

<h2>Confirmación de Reservación</h2>

<!-- Detalles de la Reservación -->
<div>
    <h3>Paquete: @Model.Reservacion.PaqueteId</h3>
    <p><strong>Fecha de llegada:</strong> @Model.Reservacion.FechaInicio</p>
    <p><strong>Fecha de salida:</strong> @Model.Reservacion.FechaFin</p>
    <p><strong>Cantidad de personas:</strong> @Model.Reservacion.CantidadPersonas</p>
    <p><strong>Total por noche:</strong> @Model.Pago.TotalPorNoche</p>
</div>

<!-- Mostrar el descuento si el pago es en efectivo -->
@if (Model.Pago.FormaPagoId == 1)
{
    <div>
        <h4>Detalles del descuento por pago en efectivo:</h4>
        <p><strong>Descuento aplicado:</strong> @Model.Pago.Descuento</p>
        <p><strong>Total con descuento:</strong> @Model.Pago.MontoConDescuento</p>
    </div>
}
else
{
     <p><strong>Sin descuentos aplicados.</p>
    
}

<!-- Mostrar los montos finales -->
<div>
    <h4>Total Final:</h4>
    <p><strong>Monto total con IVA:</strong> @Model.Pago.TotalFinal</p>
</div>

<!-- Botón de confirmación -->
<form method="post" asp-action="ConfirmarReservacion">
    <button type="submit" class="btn btn-success">Confirmar Reservación</button>
</form>
